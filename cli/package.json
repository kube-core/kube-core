{
  "name": "@kube-core/cli",
  "version": "0.3.15",
  "description": "CLI for kube-core",
  "author": "Damien Parbhakar",
  "bin": {
    "kube-core": "./bin/run",
    "kube-core-dev": "./bin/dev"
  },
  "homepage": "https://github.com/dparbhakar/kube-core",
  "license": "MIT",
  "main": "dist/index.js",
  "repository": "kube-core/cli",
  "files": [
    "/bin",
    "/dist",
    "/npm-shrinkwrap.json",
    "/oclif.manifest.json",
    "/scripts"
  ],
  "dependencies": {
    "@oclif/core": "^1",
    "@oclif/plugin-autocomplete": "^1.3.0",
    "@oclif/plugin-help": "^5",
    "@oclif/plugin-plugins": "^2.0.1",
    "change-case": "^4.1.2",
    "execa": "5.1.1",
    "node-plop": "^0.31.0",
    "plop": "^3.1.0"
  },
  "devDependencies": {
    "@oclif/test": "^2",
    "@types/chai": "^4",
    "@types/mocha": "^9.0.0",
    "@types/node": "^16.9.4",
    "chai": "^4",
    "cross-env": "^7.0.3",
    "eslint": "^7.32.0",
    "eslint-config-oclif": "^4",
    "eslint-config-oclif-typescript": "^1.0.2",
    "globby": "^11",
    "mocha": "^9",
    "node-watch": "^0.7.3",
    "nodemon": "^2.0.16",
    "oclif": "^3",
    "prettier": "2.6.2",
    "shx": "^0.3.3",
    "ts-node": "^10.8.0",
    "tslib": "^2.3.1",
    "typescript": "^4.7.2",
    "watch": "^1.0.2"
  },
  "oclif": {
    "bin": "kube-core",
    "dirname": "kube-core",
    "commands": "./dist/commands",
    "plugins": [
      "@oclif/plugin-help",
      "@oclif/plugin-plugins",
      "@oclif/plugin-autocomplete"
    ],
    "topicSeparator": " ",
    "topics": {
      "apply": {
        "description": "Apply kube-core and cluster configuration."
      },
      "build": {
        "description": "Build kube-core and cluster configuration."
      },
      "dev": {
        "description": "Tools for kube-core development."
      },
      "diff": {
        "description": "Run a diff on a cluster."
      },
      "generate": {
        "description": "Generate various resources."
      },
      "import": {
        "description": "Import resources from a cluster."
      },
      "scripts": {
        "description": "Search and execute available scripts."
      },
      "values": {
        "description": "View and manage configuration values."
      }
    }
  },
  "scripts": {
    "dev:x": "watch yarn run prepack src",
    "dev:w": "watch \"yarn run prepack\" src",
    "build": "rm -rf dist && tsc -b",
    "lint": "eslint . --ext .ts --config .eslintrc",
    "format": "yarn prettier --write src",
    "postpack": "rm -f oclif.manifest.json",
    "posttest": "yarn lint",
    "prepack": "yarn build && oclif manifest && oclif readme",
    "test": "mocha --forbid-only \"test/**/*.test.ts\"",
    "version": "oclif readme && git add README.md"
  },
  "engines": {
    "node": ">=12.0.0"
  },
  "bugs": "https://github.com/dparbhakar/kube-core/issues",
  "keywords": [
    "oclif"
  ],
  "types": "dist/index.d.ts"
}
