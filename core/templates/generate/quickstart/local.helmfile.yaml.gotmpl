environments:
  default:
    values:
    {{ $entries := readDirEntries "../values/platform/" }}
    {{ range $item := $entries }}
    {{ if (contains ".yaml" $item.Name) }}
    - ../values/platform/{{ $item.Name }}
    {{ end }}
    {{ end }}
    {{ $entries := readDirEntries "../values/dev/" }}
    {{ range $item := $entries }}
    {{ if (contains ".yaml" $item.Name) }}
    - ../values/dev/{{ $item.Name }}
    {{ end }}
    {{ end }}
---
{{ $values := .Values }}

{{ if (or (env "KUBE_CORE_DEV") ($values | getOrNil "devMode")) }}
{{ tpl (readFile $values.org.core.lib.templates.local.localPath) (dict "Values" .Values) }}
{{ else }}
{{ tpl (readFile $values.org.core.lib.templates.local.remotePath) (dict "Values" .Values) }}
{{ end }}
